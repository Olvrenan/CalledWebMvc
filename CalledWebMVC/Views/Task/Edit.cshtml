@model CalledWebMVC.Models.ViewModels.TaskFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<br />
<h4>Editar</h4>
<hr />
<div class="row">
    <div class="form-group col-md-12">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Task.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="Task.Title" class="control-label"></label>
                    <input asp-for="Task.Title" class="form-control" />
                    <span asp-validation-for="Task.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Task.TaskStatus" class="control-label"></label>
                    <select asp-for="Task.TaskStatus" asp-items="Html.GetEnumSelectList <CalledWebMVC.Models.Enums.Status>()" class="form-control"></select>
                    <span asp-validation-for="Task.TaskStatus" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Task.Datecreated" class="control-label"></label>
                    <input asp-for="Task.Datecreated" class="form-control" />
                    <span asp-validation-for="Task.Datecreated" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Task.DateDone" class="control-label"></label>
                    <input asp-for="Task.DateDone" class="form-control" />
                    <span asp-validation-for="Task.DateDone" class="text-danger"></span>
                </div>
            </div>
            <div class="row">

                <div class="form-group col-md-4">
                    <label asp-for="Task.FunctionaryId" class="control-label"></label>
                    <select asp-for="Task.FunctionaryId" asp-items="@(new SelectList(Model.Functionaries,"Id","Name"))" class="form-control"></select>
                    <span asp-validation-for="Task.FunctionaryId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Task.Categoria" class="control-label"></label>
                    <input asp-for="Task.Categoria" class="form-control" />
                    <span asp-validation-for="Task.Categoria" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Task.SprintId" class="control-label"></label>
                    <select asp-for="Task.SprintId" asp-items="@(new SelectList(Model.Sprints,"Id","Name"))" class="form-control"></select>
                    <span asp-validation-for="Task.SprintId" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group col-md-12">
                <label asp-for="Task.Description" class="control-label"></label>
                <textarea rows="8" cols="40" asp-for="Task.Description" class="form-control"> </textarea>
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>

            <div class="col-md-12">
                <input type="submit" value="Salvar" class="btn btn-primary" />


            </div>

        </form>



    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

