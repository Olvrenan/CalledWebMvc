@model CalledWebMVC.Models.Task

@{
    ViewData["Title"] = "Delete";
}


<div>
   
        <div class="modal-content">
            <div class="modal-header">

                <h4 class="modal-title">Deseja deletar esta tarefa ?</h4>
            </div>
            <div class="modal-body">
                
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(model => model.Title)</dt>
                    <dd>@Html.DisplayFor(model => model.Title)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd>@Html.DisplayFor(model => model.Description)</dd>
                    <dt>@Html.DisplayNameFor(model => model.Categoria)</dt>
                    <dd>@Html.DisplayFor(model => model.Categoria)</dd>

                </dl>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <div class="form-actions no-color">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Deletar" class="btn btn-danger" />
                        <button type="button" class="btn btn-dark" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    
</div>